{
  "name": "pacemaker-video",
  "version": "0.1.0",
  "private": true,
  "packageManager": "npm@10.8.2",
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest",
    "prepare": "husky",
    "validate-branch-name": "npx validate-branch-name",
    "typecheck": "tsc --noEmit --module esnext --incremental",
    "lint-staged": "npx lint-staged",
    "precommit-build": "npm run build",
    "precommit-tasks": "npm run precommit-build && npm run validate-branch-name && npm run typecheck && npm run lint-staged",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.896.0",
    "@aws-sdk/s3-request-presigner": "^3.896.0",
    "@clerk/backend": "^2.15.0",
    "@clerk/nextjs": "^6.33.1",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@headlessui/react": "^2.2.9",
    "@hookform/resolvers": "^5.2.2",
    "@prisma/client": "^6.16.2",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.4",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@radix-ui/react-use-controllable-state": "^1.2.2",
    "@supabase/supabase-js": "^2.57.4",
    "@wistia/wistia-player-react": "^0.2.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "embla-carousel-react": "^8.6.0",
    "filepond-plugin-image-preview": "^4.6.12",
    "lucide-react": "^0.544.0",
    "next": "15.5.4",
    "next-auth": "^4.24.5",
    "next-themes": "^0.4.6",
    "pdfjs-dist": "5.4.149",
    "react": "^18",
    "react-big-calendar": "^1.19.4",
    "react-dom": "^18",
    "react-filepond": "^7.1.3",
    "react-hook-form": "^7.63.0",
    "react-pdf": "^10.1.0",
    "sonner": "^2.0.7",
    "svix": "^1.76.1",
    "tailwind-merge": "^3.3.1",
    "uuid": "^13.0.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.1",
    "@eslint/eslintrc": "^3.3.0",
    "@next/eslint-plugin-next": "^15.2.4",
    "@storybook/addon-designs": "^10.0.2",
    "@storybook/addon-docs": "^9.1.8",
    "@storybook/nextjs": "^9.1.7",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.5.2",
    "@types/react": "^18",
    "@types/react-big-calendar": "^1.16.3",
    "@types/react-dom": "^18",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.36.0",
    "eslint-config-next": "^15.5.4",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-storybook": "^9.1.8",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.2.1",
    "postcss": "^8",
    "prettier": "^3.6.2",
    "prisma": "^6.16.2",
    "storybook": "^9.1.7",
    "tailwindcss": "^3.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "validate-branch-name": "^1.3.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.2"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write .",
      "eslint --fix ."
    ],
    "*.ts": [
      "tsc-files --noEmit",
      "prettier --write .",
      "eslint --fix ."
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write ."
    ]
  },
  "validate-branch-name": {
    "pattern": "^(main){1}$|^(chore|hotfix)\\/([\\/\\w\\-\\d]+)$|^(\\w+-\\d+)\\/([\\w\\-\\d]+)$",
    "errorMsg": "Please follow standard branch name, rename branch using: git branch -m <oldname> <newname>"
  }
}
