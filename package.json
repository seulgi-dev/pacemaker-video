{
  "name": "pacemaker-video",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest",
    "prepare": "husky",
    "validate-branch-name": "npx validate-branch-name",
    "typecheck": "tsc --noEmit --module esnext --incremental",
    "lint-staged": "npx lint-staged",
    "precommit-build": "npm run build",
    "precommit-tasks": "npm run precommit-build && npm run validate-branch-name && npm run typecheck && npm run lint-staged"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.787.0",
    "@clerk/backend": "^1.32.0",
    "@clerk/nextjs": "^6.19.2",
    "@hookform/resolvers": "^5.0.1",
    "@prisma/client": "^6.7.0",
    "@radix-ui/react-dialog": "^1.1.13",
    "@radix-ui/react-label": "^2.1.4",
    "@radix-ui/react-separator": "^1.1.6",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-tooltip": "^1.2.6",
    "@supabase/supabase-js": "^2.49.4",
    "@wistia/wistia-player-react": "^0.0.111",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.503.0",
    "next": "15.3.1",
    "next-auth": "^4.24.5",
    "next-themes": "^0.4.6",
    "pdfjs-dist": "^5.2.133",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.56.3",
    "react-pdf": "^9.2.1",
    "sonner": "^2.0.3",
    "svix": "^1.65.0",
    "tailwind-merge": "^3.2.0",
    "uuid": "^11.1.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.0",
    "@next/eslint-plugin-next": "^15.2.4",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.15.3",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.0",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.26.0",
    "eslint-config-next": "^15.3.2",
    "eslint-plugin-prettier": "^5.4.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.5.1",
    "postcss": "^8",
    "prettier": "^3.5.3",
    "prisma": "^6.7.0",
    "tailwindcss": "^3.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5",
    "validate-branch-name": "^1.3.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.2"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write .",
      "eslint --fix ."
    ],
    "*.ts": [
      "tsc-files --noEmit",
      "prettier --write .",
      "eslint --fix ."
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write ."
    ]
  },
  "validate-branch-name": {
    "pattern": "^(main){1}$|^(chore|hotfix)\\/([\\/\\w\\-\\d]+)$|^(\\w+-\\d+)\\/([\\w\\-\\d]+)$",
    "errorMsg": "Please follow standard branch name, rename branch using: git branch -m <oldname> <newname>"
  }
}
