{
  "name": "pacemaker-video",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "prepare": "husky",
    "validate-branch-name": "npx validate-branch-name",
    "typecheck": "tsc --noEmit --module esnext --incremental",
    "lint-staged": "npx lint-staged",
    "precommit-build": "npm run build",
    "precommit-tasks": "npm run precommit-build && npm run validate-branch-name && npm run typecheck && npm run lint-staged"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.12.5",
    "@hookform/resolvers": "^4.1.3",
    "@prisma/client": "^6.5.0",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-tooltip": "^1.1.8",
    "@supabase/supabase-js": "^2.49.1",
    "@wistia/wistia-player-react": "^0.0.102",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "filepond": "^4.32.7",
    "filepond-plugin-image-preview": "^4.6.12",
    "lucide-react": "^0.482.0",
    "next": "15.2.3",
    "next-auth": "^4.24.5",
    "next-themes": "^0.4.6",
    "react": "^18",
    "react-dom": "^18",
    "react-filepond": "^7.1.3",
    "react-hook-form": "^7.54.2",
    "react-pdf": "^9.2.1",
    "sonner": "^2.0.1",
    "svix": "^1.61.4",
    "tailwind-merge": "^2.6.0",
    "uuid": "^11.1.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.0",
    "@next/eslint-plugin-next": "^15.2.2",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.22.0",
    "eslint-config-next": "^15.2.2",
    "eslint-plugin-prettier": "^5.2.3",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "postcss": "^8",
    "prettier": "^3.5.3",
    "prisma": "^6.5.0",
    "tailwindcss": "^3.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5",
    "validate-branch-name": "^1.3.2"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write .",
      "eslint --fix ."
    ],
    "*.ts": [
      "tsc-files --noEmit",
      "prettier --write .",
      "eslint --fix ."
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write ."
    ]
  },
  "validate-branch-name": {
    "pattern": "^(main){1}$|^(chore|hotfix)\\/([\\/\\w\\-\\d]+)$|^(\\w+-\\d+)\\/([\\w\\-\\d]+)$",
    "errorMsg": "Please follow standard branch name, rename branch using: git branch -m <oldname> <newname>"
  }
}
